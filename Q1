<!DOCTYPE html>
<html>
<head>
    <title>Employee Pay Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #218838;
        }
        .result {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Employee Pay Calculator</h2>
        <div class="form-group">
            <label for="name">Employee Name:</label>
            <input type="text" id="name" required>
        </div>
        <div class="form-group">
            <label for="hoursWorked">Hours Worked:</label>
            <input type="number" id="hoursWorked" required>
        </div>
        <div class="form-group">
            <label for="ratePerHour">Rate per Hour:</label>
            <input type="number" id="ratePerHour" required>
        </div>
        <button onclick="calculatePay()">Calculate Pay</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculatePay() {
            const name = document.getElementById('name').value;
            const hoursWorked = parseFloat(document.getElementById('hoursWorked').value);
            const ratePerHour = parseFloat(document.getElementById('ratePerHour').value);
            
            if (!name || isNaN(hoursWorked) || isNaN(ratePerHour)) {
                alert("Please enter valid inputs.");
                return;
            }

            const basicPay = hoursWorked * ratePerHour;
            let tax = 0;

            if (basicPay > 50000) {
                tax = 0.20 * basicPay;
            } else if (basicPay >= 20000 && basicPay <= 50000) {
                tax = 0.10 * basicPay;
            }

            const netPay = basicPay - tax;

            document.getElementById('result').innerHTML = `
                <p>Employee Name: ${name}</p>
                <p>Basic Pay: ${basicPay.toFixed(2)}</p>
                <p>Tax: ${tax.toFixed(2)}</p>
                <p>Net Pay: ${netPay.toFixed(2)}</p>
            `;
        }
    </script>
</body>
</html>
